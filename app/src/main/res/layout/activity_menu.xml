<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:layout_marginTop="20sp"
            android:textSize="30dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_marginTop="100sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Következő Activity"
            android:layout_below="@id/textViewName"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonNameChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonNext"
            android:text="Név változtatás"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonNameChange"
            android:text="Információ"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonInformation"
            android:text="Kilépés"
            android:textSize="30dp" />


</RelativeLayout>